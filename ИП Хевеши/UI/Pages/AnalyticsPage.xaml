<Page x:Class="ИП_Хевеши.UI.Pages.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ИП_Хевеши.UI.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="AnalyticsPage"
      MinHeight="720" MinWidth="1080">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
    

        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button x:Name="btnBack" Grid.Column="0"  BorderThickness="0" Margin="15,0,15,0" HorizontalAlignment="Left" Width="40" Height="40" Padding="0" Click="btnBack_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/backbtn.png"/>
                </Button.Background>
            </Button>

            <TextBlock Text="Анализ данных" VerticalAlignment="Bottom" Grid.Column="1" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,10" Grid.Row="0"/>

        </StackPanel>

        <StackPanel Grid.Row="1"  Orientation="Horizontal" Margin="0,0,0,10">
            
            <TextBlock Text="Начальная дата:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="15,0,5,0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,10,0"/>

            <TextBlock Text="Конечная дата:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,10,0"/>

            <TextBlock Text="Комплектующее:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding ComponentNames}" SelectedItem="{Binding SelectedComponentName}"  Margin="0,0,10,0" Width="150"/>

            <Button Content="Применить фильтры" Click="FilterButton_Click" Width="130" Style="{StaticResource AutoWideButtons}" Margin="0,0,10,0" Padding="5,2"/>
            <Button Content="Сбросить фильтры" Click="ResetFilterButton_Click" Width="130" Style="{StaticResource AutoWideButtons}"  Padding="5,2"/>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <!--  This Grid will hold the charts  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Grid.Column="0" Margin="5">
                <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" Grid.Column="0">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Сумма" LabelFormatter="{Binding YFormatter}" MinValue="0"/>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Месяц" Labels="{Binding Labels}"/>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Border>

            <Border BorderBrush="LightGray" BorderThickness="1" Grid.Column="1" Width="auto" Padding="10" Margin="5">
                <lvc:PieChart x:Name="PieChartSeries" Series="{Binding PieChartSeries}"  HorizontalAlignment="Center" Width="500">
                    <lvc:PieChart.ChartLegend>
                        <lvc:DefaultLegend/>
                    </lvc:PieChart.ChartLegend>
                    
                </lvc:PieChart>
            </Border>
        </Grid>

        <TextBlock Grid.Row="3" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                  
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasError}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                            
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</Page>
