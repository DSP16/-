<Page x:Class="ИП_Хевеши.UI.Pages.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:ИП_Хевеши.UI.Pages" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      xmlns:vm="clr-namespace:ИП_Хевеши.Views"
      Background="White"
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="AnalyticsPage">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Orientation="Vertical" >

            

            

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Аналитика" Grid.Row="0" FontSize="20" Margin="10" />

                
                <oxy:PlotView Grid.Row="1" Model="{Binding RevenuePlotModel}" Height="500" Margin="10"/>

                <StackPanel Grid.Row="4" Margin="20">
                    
                    <TextBlock Text="Самые популярные товары" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
                    <ItemsControl ItemsSource="{Binding TopProducts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E0F7FA" Margin="5" Padding="10" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="200"/>
                                        <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding Display}" VerticalAlignment="Center" Margin="3,0,0,0" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <StackPanel Margin="20" Grid.Row="5">
                    <TextBlock Text="Топ неликвидов" FontWeight="Bold" FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding DeadProducts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E0F7FA" Margin="5" Padding="10" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="200"/>
                                        <TextBlock Text="{Binding LastSoldDate, StringFormat='Последняя продажа: {0:dd.MM.yyyy}'}"/>
                                    </StackPanel>
                                </Border>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="6" Margin="20">
                    <TextBlock Text="Прогноз выручки" FontWeight="Bold"  Margin="0 0 0 10" FontSize="16"/>
                    <oxy:PlotView Model="{Binding RevenueForecastModel}" Grid.Row="6" Height="400" Margin="10"/>
                    <Button Content="Экспорт в Excel" Click="Export_Click" Style="{StaticResource AutoWideButtons}" Margin="10" Width="150" />
                </StackPanel>
            </Grid>


        </StackPanel>
    </ScrollViewer>
</Page>
