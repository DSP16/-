<Page x:Class="ИП_Хевеши.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ИП_Хевеши.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="450"
      Title="LoginPage"
      ShowsNavigationUI="False">

    <Grid
        Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="GhostWhite"/>
            <Image Grid.Row="0" Source="pack://application:,,,/Resources/AppLogoKP.png" Width="125" Height="125" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
           
            <Label Grid.Row="1" Content="Логин" FontSize="15" Width="120" Height="30" Margin="0,8,160,0" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="tbLogin" HorizontalAlignment="Center" Margin="0,10,0,0" 
                     Style="{StaticResource TextBoxes}" Grid.Row="1" />
            <Label Grid.Row="3" Content="Пароль" FontSize="15" Width="120" Height="30" Margin="0,8,160,0" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="tbVisiblePassword" HorizontalAlignment="Center" Visibility="Hidden" Margin="0,10,0,0" 
                     Style="{StaticResource TextBoxes}" Grid.Row="3"/>
            <PasswordBox x:Name="pbPassword" HorizontalAlignment="Center" Visibility="Visible" Margin="0,10,0,0" 
                         Style="{StaticResource PasswordBoxes}" Grid.Row="3"/>
            <CheckBox x:Name="cbHideShowPassword" Style="{StaticResource CheckBoxes}" Unchecked="cbHideShowPassword_Unchecked"
                      Grid.Row="3" VerticalAlignment="Bottom" Margin="85,0,0,3" Content=" Видимость пароля" 
                      IsChecked="False" Checked="cbHideShowPassword_Checked"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Image x:Name="CaptchaImage"  Margin="80,10,0,0"  Width="150" Height="50" />
                <TextBox x:Name="CaptchaTextBox" Width="130" Height="25" HorizontalAlignment="Center"  
                         Style="{StaticResource TextBoxes}" Margin="5,-20,0,0"/>
            </StackPanel>
            
            <Button x:Name="btnRefreshCaptcha" Width="70" Grid.Row="2" Height="25" Content="Обновить"
                    Style="{StaticResource Buttons}" Margin="100,40,0,0" Click="btnRefreschCaptcha_Click"/>

            <Button x:Name="btnAuthorize" Width="280" Height="40" Grid.Row="4" Style="{StaticResource Buttons}" 
                    Content="Войти"  Click="btnAuthorize_Click" />
        </Grid>
    </Grid>
</Page>
