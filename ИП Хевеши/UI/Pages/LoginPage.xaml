<Page x:Class="ИП_Хевеши.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ИП_Хевеши.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="450"
      Title="LoginPage"
      ShowsNavigationUI="False">

    <Grid
        Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="0.4*" />
                <RowDefinition/>
               
                
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="GhostWhite"/>
            <Image Grid.Row="0" Source="pack://application:,,,/Resources/AppLogoKP.png" Width="125" Height="125" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
           
            <Label Grid.Row="1" Content="Логин"  FontSize="15" Width="120" Height="30" Margin="0,0,160,0" 
                   HorizontalAlignment="Center" FontWeight="SemiBold" VerticalAlignment="Top"/>
            <TextBox x:Name="tbLogin" TabIndex="1"  HorizontalAlignment="Center" Margin="0,20,0,0" 
                     Style="{StaticResource TextBoxes}" Grid.Row="1" />
            <Label Grid.Row="2" Content="Пароль" FontWeight="SemiBold" FontSize="15" Width="120" Height="30" Margin="0,0,160,0" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="tbVisiblePassword" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" Margin="0,30,0,0" 
                     Style="{StaticResource TextBoxes}" Grid.Row="2"/>
            <PasswordBox x:Name="pbPassword" TabIndex="2" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Visible" Margin="0,30,0,0" 
                         Style="{StaticResource PasswordBoxes}" Grid.Row="2"/>
            <CheckBox x:Name="cbHideShowPassword" Style="{StaticResource CheckBoxes}" Unchecked="cbHideShowPassword_Unchecked"
                      Grid.Row="3" VerticalAlignment="Center" Margin="80,0,0,3" Content=" Видимость пароля" 
                      IsChecked="False" Checked="cbHideShowPassword_Checked"/>
            
            
          
            <Button x:Name="btnAuthorize" Width="280" Height="40" Grid.Row="4" Style="{StaticResource Buttons}" 
                    Content="Войти"  Click="btnAuthorize_Click" />
        </Grid>
    </Grid>
</Page>
