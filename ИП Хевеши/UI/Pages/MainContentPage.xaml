<Page x:Class="ИП_Хевеши.UI.Pages.MainContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ИП_Хевеши.UI.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="1080"
      MinHeight="725" MinWidth="1080"
      Title="MainContentPage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition>
        </ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.24*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid  Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnRemains" Grid.Column="0" Style="{StaticResource AutoWideButtons}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,25,25,75" Content="Остатки" Click="btnRemains_Click" />
            <Button x:Name="btnOpenAddComponent" Grid.Column="0" HorizontalAlignment="Left" Width="217" VerticalAlignment="Bottom" Content="Добавить компонент" Style="{StaticResource AutoWideButtons}" Click="btnOpenAddComponent_Click" Margin="25,0,0,25"/>
            <Button x:Name="btnAllList" Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource AutoWideButtons}" Width="100"  VerticalAlignment="Bottom" Margin="142,25,25,75" Content="Весь список" Click="btnAllList_Click" />
            <Button x:Name="btnUpdateComponentList" Grid.Column="0" Style="{StaticResource AutoWideButtons}" Click="btnUpdateComponentList_Click" Width="100"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Обновить" Margin="250,25,25,25"/>
            <TextBlock x:Name="tbBackward" MouseLeftButtonDown="tbBackward_MouseLeftButtonDown" Grid.Column="2"  Grid.Row="0" Text="Выйти" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="25" Style="{StaticResource TextBlocks}" />
            <TextBlock x:Name="tbCurrentUser" Grid.Column="2" VerticalAlignment="Center" FontSize="16"  Style="{StaticResource TextBlocks}"  HorizontalAlignment="Center" Margin="0,0,0,0"/>
            <TextBox x:Name="tbSearch" KeyDown="tbSearch_KeyDown" TextChanged="tbSearch_TextChanged" ToolTip="Поиск по названию" GotFocus="tbSearch_GotFocus" LostFocus="tbSearch_LostFocus" Grid.Column="1" Style="{StaticResource OtherTextBoxes}" />
            <TextBlock x:Name="NoResultsTextBlock" Grid.Row="0" Grid.Column="1" Text="Товаров не найдено" Visibility="Collapsed" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
           
            <Button x:Name="btnSearch" Click="btnSearch_Click" Grid.Column="1" VerticalAlignment="Center"  BorderThickness="0" Height="20" Padding="0"  HorizontalAlignment="Right" Width="20">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/Searchico.png"/>
                </Button.Background>
            </Button>
        </Grid>
        
        <ScrollViewer Grid.Column="0" Grid.Row="1">
            <StackPanel x:Name="ProductContainer" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</Page>
