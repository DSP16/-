<Window x:Class="ИП_Хевеши.UI.Winds.AddComponentWn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИП_Хевеши.UI.Winds"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Resources/AppLogoKPIcon.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        
        Title="ИП Хевеши | Добавление компонента" Height="650" Width="810">
    <Grid Margin="20">
        <Grid.RowDefinitions>

            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnBack" Grid.Column="0"  BorderThickness="0" HorizontalAlignment="Left" Width="40" Height="40" Padding="0" Click="btnBack_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Resources/backbtn.png"/>
            </Button.Background>
        </Button>

        <TextBlock Text="Название:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="1" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbName" ToolTip="Название. [Строка]" Style="{StaticResource OtherTextBoxes}" Grid.Row="1" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Тип:"  Style="{StaticResource AddComponentTextBlock}" Grid.Row="2" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbType" ToolTip="Тип. [Строка]"  Style="{StaticResource OtherTextBoxes}"  Grid.Row="2" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Производитель:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="3" Grid.Column="1" Margin="5,10,5,5"/>
        <ComboBox x:Name="cbManufacturer" Height="35" ToolTip="Производитель. [Список]"  Grid.Row="3" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Цена:" Grid.Row="4" Style="{StaticResource AddComponentTextBlock}" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbPrice" ToolTip="Цена. [Число]"  Style="{StaticResource OtherTextBoxes}"  Grid.Row="4" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Количество:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="5" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbQuantity" ToolTip="Количество. [Число]"  Style="{StaticResource OtherTextBoxes}"  Grid.Row="5" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Отдел:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="6" Grid.Column="1" Margin="5,10,5,5"/>
        <ComboBox x:Name="cbZone"  Height="35" ToolTip="Отдел. [Список]" Grid.Row="6" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Минимальное количество:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="7" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbMinQuantity"  ToolTip="Минимальное количество. [Число]" Style="{StaticResource OtherTextBoxes}"  Grid.Row="7" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Номер ряда:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="8" Grid.Column="1" Margin="5,10,5,5"/>
        <TextBox x:Name="tbRowCell"  ToolTip="Номер ряда. [Строка]" Style="{StaticResource OtherTextBoxes}"  Grid.Row="8" Grid.Column="2" Margin="5,10,5,5"/>

        <TextBlock Text="Актуальность:" Style="{StaticResource AddComponentTextBlock}" Grid.Row="9" Grid.Column="1" Margin="5,10,5,5"/>
        <ComboBox x:Name="cbActuality"  Height="35" ToolTip="Отдел. [Список]" Grid.Row="9" Grid.Column="2" Margin="5,10,5,5">
            <ComboBoxItem Content="Актуально"/>
            <ComboBoxItem Content="Не актуально"/>
        </ComboBox>

        <Button x:Name="btnAddProduct" Content="Добавить" Grid.Row="10" Grid.Column="2" HorizontalAlignment="Center" Style="{StaticResource Buttons}" Margin="5,30,5,5" Click="AddButton_Click"/>
    </Grid>
</Window>
