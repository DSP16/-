<Window x:Class="ИП_Хевеши.UI.Winds.TipWinds.HelperWn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИП_Хевеши.UI.Winds.TipWinds"
        mc:Ignorable="d"
          WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Background="GhostWhite"
    Closed="Window_Closed"
    Icon="pack://application:,,,/Resources/AppLogoKPIcon.ico"
    Title="ИП Хевеши | Справочник" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="0.1*" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="lTitle" Grid.Row="0" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="18"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <TextBlock x:Name="tbHelper"  TextWrapping="Wrap" Padding="10,10,10,0" Margin="10" TextAlignment="Justify" FontSize="14"/>
        </ScrollViewer>

    </Grid>
</Window>
