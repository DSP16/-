<Window x:Class="ИП_Хевеши.UI.Winds.AddIssuanceWn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИП_Хевеши.UI.Winds"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/AppLogoKPIcon.ico"
        Title="ИП Хевеши | Добавление расхода" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnBack" Grid.Column="0"  BorderThickness="0" HorizontalAlignment="Left" Width="25" Height="25" Padding="0" Click="btnBack_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Resources/backbtn.png"/>
            </Button.Background>
        </Button>

        <TextBlock Text="Компонент:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <ComboBox x:Name="cbComponent" Height="35" Grid.Row="1" Grid.Column="2" Margin="5" DisplayMemberPath="Name" SelectedValuePath="ID"/>

        <TextBlock Text="Дата продажи:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <DatePicker x:Name="dpIssuanceDate" Height="35" Grid.Row="2"  Grid.Column="2" Margin="5"/>

        <TextBlock Text="Количество:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <TextBox x:Name="tbQuantity" Style="{StaticResource OtherTextBoxes}"  Grid.Row="3" Grid.Column="2" Margin="5"/>

        <TextBlock Text="Работник:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <ComboBox x:Name="cbUser" Grid.Row="4" Height="35" Grid.Column="2" Margin="5" DisplayMemberPath="FullName" SelectedValuePath="ID"/>

        <TextBlock Text="Покупатель:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" Margin="5"/>
        <ComboBox x:Name="cbBuyer" Grid.Row="5" Height="35" Grid.Column="2" Margin="5" DisplayMemberPath="BuyerName" SelectedValuePath="ID"/>

        <Button Name="btnAddIssuance" Content="Добавить" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" Style="{StaticResource AutoWideButtons}" Margin="0,10,0,0" Width="100" Height="25" Click="AddButton_Click"/>

    </Grid>
</Window>
