<Window x:Class="ИП_Хевеши.Winds.CreateIssuanceReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИП_Хевеши.Classes"
        mc:Ignorable="d"
                Icon="pack://application:,,,/Resources/AppLogoKPIcon.ico"

       Title="Создание приходной накладной" Height="210" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите покупателя:"  FontSize="14" Margin="0 0 0 5"/>
        <ComboBox x:Name="cbBuyer" DisplayMemberPath="Name" Height="40" SelectedValuePath="ID" />
        <Button Content="Создать" Width="100" Style="{StaticResource AutoWideButtons}" Margin="0 10 0 0"
                Click="Create_Click"/>
    </StackPanel>
</Window>
