<UserControl x:Class="ИП_Хевеши.UI.UserControls.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ИП_Хевеши.UI.UserControls" 
             d:DataContext="{d:DesignInstance Type=local:ProductCard}" 
             mc:Ignorable="d" Width="1080" Background="#91c8ff" Margin="0,0,0,20">
    <Grid >
        <Grid Background="#91c8ff" Margin="0 15 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>


            </Grid.ColumnDefinitions>
            <TextBlock x:Name="tbName"  VerticalAlignment="Center" Grid.Column="0" Text="{Binding ComponentName}" Style="{StaticResource ProductTextBlock}" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="tbPrice"  VerticalAlignment="Center" Grid.Column="1" Text="{Binding Price, StringFormat='Оптовая цена: {0}'}" Style="{StaticResource ProductTextBlock}" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="tbManufacturer"  VerticalAlignment="Center" Grid.Column="2" Text="{Binding Manufacturer, StringFormat='Производитель: {0}'}" Style="{StaticResource ProductTextBlock}" FontSize="16" FontWeight="SemiBold"  />
            <TextBlock x:Name="tbQuantity"  VerticalAlignment="Center" Grid.Column="3" Text="{Binding Quantity, StringFormat='Количество: {0}'}" Style="{StaticResource ProductTextBlock}" FontSize="16" FontWeight="SemiBold"  />
            <CheckBox Content=" Актуален" Style="{StaticResource CheckBoxesProduct}" IsHitTestVisible="False" Grid.Column="4" Background="#91c8ff" IsChecked="{Binding IsCheckedActuality, Mode=TwoWay}" Margin="5,0,0,13" Checked="ActualityCheckBox_CheckedChanged" Unchecked="ActualityCheckBox_CheckedChanged"/>
        </Grid>

       

    </Grid>
</UserControl>
